{

  "manifest_version": 2,
  "name": "Brunozon",
  "version": "1.0",

  "description": "It's like Amazon, but Bruno.",

  "icons": {
    "48": "icons/brunozon-48.png",
    "96": "icons/brunozon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "include_globs": ["*://*.amazon.*/*"],
      "js": ["brunozon.js"]
    }
  ],
  "web_accessible_resources": [
    "icons/brunozon-logo.png", "icons/brunozon-logo-inverted.png"
  ]
}
