{

  "manifest_version": 2,
  "name": "Brunozon",
  "version": "1.0",

  "description": "It's like Amazon, but Bruno.",

  "icons": {
    "48": "icons/brunozon-48.png",
    "96": "icons/brunozon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*", "*://*.amazon.de/*", "*://*.amazon.co.uk/*", "*://*.amazon.nl/*"],
      "js": ["brunozon.js"]
    }
  ],
  "web_accessible_resources": [
    "icons/brunozon-logo.png"
  ]
}
